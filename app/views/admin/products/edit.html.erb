
<div ><br><br></div>
<h2>Edit Product</h2>
<div class = "container-fluid text-center bg-shop">
	<div ><br><br></div>
<%= simple_form_for [:admin, @product] do |f| %>
	<div class="form-group">
		<%= f.input :title %>
	</div>
	<div class="form-group">
		<%= f.input :number %>
	</div>
	<div class="form-group">
		<%= f.input :description %>
	</div>
	<div class="form-group">
		<%= f.input :price %>
	</div>
	<div class="form-group">
		<%= f.simple_fields_for :image do |p|%>
			<%= p.input :image, as: :file %>
	<% end %>
	</div>
	<%= f.submit "Submit", data: { disable_with: "Submitting...."} %>
	<div ><br><br></div>
<% end %>
</div>

