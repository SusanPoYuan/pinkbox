<link rel="stylesheet" type="text/css" href="/assets/application.css.scss" />
<div class= "container-fluid bg-shop-2">
  <div class="row">
    <div class="col-md-12">
      <h2>
        訂單明細： <br>
        <small>
          <%= link_to("訂單連結", order_url(@order.id)) %>
        </small>
      </h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品明細</th>
            <th>單價</th>
            <th>數量</th>
            <th>小記</th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.product_title %></td>
              <td><%= order_item.product_price %></td>
              <td><%= order_item.product_quantity %></td>
              <td><%= order_item.product_quantity * order_item.product_price %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="total group clearfix">
        <h4 class="pull-right">
          總計 <%= @order.total %> NTD
        </h4>
       </div>

       <hr>
       <h2> 寄送資訊 </h2>

       <table class="table table-bordered">
        <tbody>
          <tr>
            <td> 訂購人 </td>
          </tr>
          <tr>
            <td><%= @order_info.billing_name %> - <%= @order_info.billing_address %></td>
          </tr>
          <tr>
            <td> 收件者 </td>
          </tr>
          <tr>
            <td><%= @order_info.shipping_name %> - <%= @order_info.shipping_address %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
